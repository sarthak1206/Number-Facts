<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/design_gradient">

    <ImageButton
        android:id="@+id/quit_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/quiticon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Number\nFacts"
        android:textAlignment="center"
        android:textColor="#2DFC00"
        android:textSize="70sp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_enter" />

    <TextView
        android:id="@+id/txt_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/Enter"
        app:layout_constraintBottom_toTopOf="@+id/number_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/number_txt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:background="@drawable/design_edit_txt"
        app:layout_constraintBottom_toTopOf="@+id/proceed_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/proceed_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="@string/proceed"
        android:paddingHorizontal="30dp"
        android:background="@drawable/design_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>